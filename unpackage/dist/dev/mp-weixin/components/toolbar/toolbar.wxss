          align-items: center;
  padding: 0 20rpx;
  height: 25px;
}
.toolbar .pen-section .pen {
  width: 80rpx;
  border-radius: 5rpx;
}
.toolbar .pen-section .pen-slider {
  width: 60%;
}
.toolbar .pen-section .pen-txt {
  font-size: 28rpx;
}
.toolbar .tool-section {
  height: 50px;
}
.toolbar .tool-section .tool-item {
  width: 20%;
  height: 50%;
  margin: 10rpx;
}
.toolbar .tool-section .tool-item .tool-btn {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 100%;
  width: 100%;
}
.toolbar .tool-section .tool-item .tool-btn .icon {
  width: 30rpx;
  height: 30rpx;
}
.toolbar .tool-section .tool-item .tool-btn .title {
  font-size: 28rpx;
  margin-left: 8rpx;
}
.toolbar .tool-section .tool-item .tool-btn .title-select {
  color: #ff875d;
}
.toolbar-black {
  background-color: #202d1c;
}
.scroll-view {
  white-space: nowrap;
  width: 100%;
}
.scroll-view-item {
  display: inline-block;
  text-align: center;
