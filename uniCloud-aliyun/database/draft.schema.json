{
	"bsonType": "object",
	"required": ["user_id"],
	"permission": {
		"read": true,
		"create": "user_id != null",
		"update": false,
		"delete": "user_id != null"
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"user_id": {
			"bsonType": "string",
			"description": "草稿箱作者id，参考uni-id-users表",
			"forceDefaultValue": {
				"$env": "uid"
			},
			"foreignKey": "uni-id-users._id"
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "保存时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"images": {
			"bsonType": "array",
			"title": "图片",
			"description": "多张图片",
			"arrayType": "file",
			"multiple": true,
			"fileMediaType": "image",
			"fileExtName": "jpg,png"
		}

	}
}
